{
  "compilerOptions": {
    "target": "es2015",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "stripInternal": true,
    "noEmitOnError": true,
    "rootDir": ".",
    "inlineSources": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "outFile": "bundle.js"
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "node_modules"

  ]
}